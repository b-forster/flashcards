<h2>Update <%= @deck.name %></h2>

<%= form_for @deck do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit "Update Deck" %>
  </div>
<% end %>

<div>
  < <%= link_to 'Back to Deck', deck_path(@deck) %>
</div>