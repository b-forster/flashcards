<h2>Add New Card to <%= @deck.name %></h2>

<%= form_for [@deck, @card] do |f| %>
  <div>
    <%= f.label :front %>
    <%= f.text_area :front %>
  </div>
  <div>
    <%= f.label :back %>
    <%= f.text_area :back %>
  </div>
  <div>
    <%= f.submit "Add Card" %>
  </div>
<% end %>

<div>
  < <%= link_to 'Back to Deck', deck_path(@deck) %>
</div>