<table class='card'>
  <tr class='card-front'>
    <td>
      <%= card.front %>
    </td>
  </tr>
  <tr class='show-answer-btn-row'>
    <td>
      <%= button_tag 'Show Answer' %>
    </td>
  </tr>
  <tr class='card-back'>
    <td>
      <%= card.back %>
    </td>
  </tr>
  <tr class='difficulty-btn-row'>
    <td>
      <%= button_tag 'Wrong' %>
      <%= button_tag 'Correct' %>
    </td>
  </tr>
</table>